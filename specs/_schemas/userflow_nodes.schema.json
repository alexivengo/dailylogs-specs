{
  "$id": "userflow_nodes.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["version", "domain", "nodes"],
  "properties": {
    "version": {"type": "string"},
    "domain": {"type": "string"},
    "nodes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "type"],
        "properties": {
          "id": {"type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"},
          "type": {"type": "string", "enum": ["screen", "system", "decision", "error"]},
          "desc": {"type": "string"},
          "inputs": {"type": "array", "items": {"type": "string"}},
          "outputs": {"type": "array", "items": {"type": "string"}},
          "edges": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "target"],
              "properties": {
                "id": {"type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"},
                "action": {"type": "string"},
                "target": {"type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"},
                "analytics": {"type": "array", "items": {"type": "string", "pattern": "^[a-z0-9]+(?:_[a-z0-9]+)*$"}},
                "guard": {"type": "string"},
                "effects": {"type": "array", "items": {"type": "string"}}
              },
              "additionalProperties": true
            }
          },
          "analytics": {"type": "array", "items": {"type": "string", "pattern": "^[a-z0-9]+(?:_[a-z0-9]+)*$"}}
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": false
}
