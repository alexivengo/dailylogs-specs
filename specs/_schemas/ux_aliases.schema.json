{
  "$id": "ux_aliases.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["aliases"],
  "properties": {
    "$schema": {"type": "string"},
    "aliases": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["alias", "canonical_id"],
        "properties": {
          "alias": {"type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"},
          "canonical_id": {"type": "string", "pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"},
          "note": {"type": "string"}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
